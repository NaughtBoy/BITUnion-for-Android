<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.ihainan.bu.app.ui.NewPostActivity"
    tools:showIn="@layout/activity_post_or_reply">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/post_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/post_edittext_border"
                    android:orientation="vertical"
                    android:paddingLeft="1dp">

                    <AutoCompleteTextView
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="主题（可选）"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:singleLine="true" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:clipToPadding="false"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp" />

                            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/attachment_layout"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardElevation="1sp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/attachment_icon"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_documentation_file" />

                                    <TextView
                                        android:id="@+id/attachment_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_toRightOf="@id/attachment_icon"
                                        android:singleLine="true"
                                        android:text="file_name.jpg"
                                        android:textColor="@color/primary"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/attachment_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/attachment_name"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_toRightOf="@id/attachment_icon"
                                        android:singleLine="true"
                                        android:text="15 KB"
                                        android:textSize="10sp" />

                                    <ImageView
                                        android:id="@+id/attachment_remove"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_cancel" />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </ScrollView>

                    <HorizontalScrollView
                        android:id="@+id/buttonPanel"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/post_buttom_border"
                        android:isScrollContainer="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/undo_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_undo_black_24dp" />

                            <ImageView
                                android:id="@+id/redo_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_redo_black_24dp" />

                            <ImageView
                                android:id="@+id/emoji_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_emoji" />


                            <ImageView
                                android:id="@+id/attachment_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:focusable="false"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_attachment_black_24dp" />

                            <ImageView
                                android:id="@+id/img_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_photo_black_24dp" />

                            <ImageView
                                android:id="@+id/quote_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_quote_2"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/bold_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_bold"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/italic_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_italic"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/link_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_link_black_24dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/at_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_at"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/test_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_smartphone_black_24dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/post_emoticons"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="end" />
        </android.support.v4.widget.DrawerLayout>
    </FrameLayout>
</RelativeLayout>
