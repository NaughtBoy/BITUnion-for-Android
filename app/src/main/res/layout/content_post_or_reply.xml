<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bit.ihainan.me.bitunionforandroid.ui.PostOrReplyActivity"
    tools:showIn="@layout/activity_post_or_reply">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/post_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/post_edittext_border"
                    android:orientation="vertical"
                    android:paddingLeft="1dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <EditText
                            android:id="@+id/new_post_message"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:clipToPadding="false"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:paddingTop="20dp"
                            android:textSize="16sp" />
                    </ScrollView>


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/post_buttom_border"
                        android:isScrollContainer="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/undo_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_undo_black_24dp" />

                            <ImageView
                                android:id="@+id/redo_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_redo_black_24dp" />

                            <ImageView
                                android:id="@+id/emoji_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_emoji" />


                            <ImageView
                                android:id="@+id/attachment_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_attachment_black_24dp" />

                            <ImageView
                                android:id="@+id/img_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_photo_black_24dp" />

                            <ImageView
                                android:id="@+id/quote_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_quote_2" />

                            <ImageView
                                android:id="@+id/bold_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_bold" />

                            <ImageView
                                android:id="@+id/italic_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_italic" />

                            <ImageView
                                android:id="@+id/link_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_link_black_24dp" />

                            <ImageView
                                android:id="@+id/at_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_at" />

                            <ImageView
                                android:id="@+id/test_action"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="@dimen/bottom_icon_padding"
                                android:src="@drawable/ic_smartphone_black_24dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/avatar" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/post_emoticons"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="end" />
        </android.support.v4.widget.DrawerLayout>
    </FrameLayout>
</RelativeLayout>
