<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:card_view="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_marginBottom="5dp"--><!--android:layout_marginTop="5dp"--><!--card_view:cardCornerRadius="1dp"--><!--card_view:cardElevation="1dp">-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- Main Content View -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/thread_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thread_item_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thread_item_author"
            android:text=" 在 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thread_item_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thread_item_in"
            android:text="long long forum name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thread_item_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thread_item_forum"
            android:text=" replied a latestThread"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thread_item_new_or_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thread_item_action"
            android:text="  NEW"
            android:textColor="@color/primary_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/thread_item_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/empty_avatar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/thread_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thread_item_author"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:text="long long long Post Title"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thread_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thread_item_avatar"
            android:paddingTop="5dp"
            android:text="100 replies"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/thread_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/thread_item_avatar"
            android:paddingTop="5dp"
            android:text="未知时空未知时间"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout><!--</android.support.v7.widget.CardView>-->